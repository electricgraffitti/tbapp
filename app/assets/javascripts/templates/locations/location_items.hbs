<div class="last_component component component_right">
  <div class="component_header">
    <div class="component_wrap">
      <div class="component_header_left">
        <label class="component_title">Store Items</label>
      </div>
      <div class="component_header_right">
        <ul class='toolbar'>
          <li>{{#link-to 'location.new_location_item' location class='icon icon-16 add' title='Add Item'}}Add Item{{/link-to}}</li>
        </ul>
      </div>
    </div>
  </div>
  <div class="component_wrap">
    <div class="component_scroller">
      {{#if controller }}
        <ul class="striped">
          {{#each item in controller }}
            {{#with item}}
              {{partial 'items/listed_sidebar_item'}}
            {{/with}}
          {{/each}}
        </ul>
      {{ else }}
        {{emptyComponentMessage emptyLocationsMessage}}
      {{/if}}
    </div>
  </div>
</div>
{{outlet}}
