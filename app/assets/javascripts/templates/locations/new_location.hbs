<div class="component listed_provider_conditions">
  <div class="component_header">
    <div class="column_component_right">
      <div class="component_header_left">
        <label class="component_title">Add Location</label>
      </div>
    </div>
  </div>
  <div class="component_content">
    <div class="form_component form_section section_left add_location_main">
      <div class="form_row">
        <div class="form-group">
          <label>Location Name</label>
          {{input value=locationName name=location placeholder='Location Name' class='form-control'}}
        </div>
        <div class="form-group">
          <label>Location Number</label>
          {{input value=locationNumber name=location placeholder='Location Number' class='form-control'}}
        </div>
      </div>
      <div class="cancel_links">
        <button class="btn btn-default btn-wide" {{action validateLocationForm flag on='click'}}>Save Location</button>
        <span> or <span {{action clearLocationForm bubbles=false on='click'}} class='span_link'>Cancel</span></span>
      </div>
    </div>
  </div>
</div>

{{outlet}}

