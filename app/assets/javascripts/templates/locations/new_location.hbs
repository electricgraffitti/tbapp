<div class="component listed_provider_conditions">
  <div class="component_header">
    <div class="column_component_right">
      <div class="component_header_left">
        <label class="component_title">Add Location</label>
      </div>
    </div>
  </div>
  <div class="component_content">
    <div class="form_component form_section section_left add_location_main">
      <div class="form_row">
        <div class="form-group">
          <label>Location Name</label>
          {{input value=locationName name=location placeholder='Location Name' class='form-control'}}
        </div>
        <div class="form-group">
          <label>Location Number</label>
          {{input value=locationNumber name=location placeholder='Location Number' class='form-control'}}
        </div>
      </div>
      <div class="form_row">
        <div class="form-group">
          <label>Location Street</label>
          {{input value=locationStreet name=location placeholder='Location Street' class='form-control'}}
        </div>
        <div class="form-group">
          <label>Location City</label>
          {{input value=locationCity name=location placeholder='Location City' class='form-control'}}
        </div>
      </div>
      <div class="form_row">
        <div class="form-group">
          <label>Location State</label>
          {{view Ember.Select
             classNames="form-control"
             content=stateObjs
             optionValuePath="content.id"
             optionLabelPath="content.full_name"
             prompt="Please select a state"
             selection=locationState}}
        </div>
        <div class="form-group">
          <label>Location Zipcode</label>
          {{input value=locationZip name=location placeholder='Location Zipcode' class='form-control'}}
        </div>
      </div>        
      <div class="form-group cancel_links">
        <button class="btn btn-default btn-wide" {{action 'validateLocation' on='click'}}>Save Location</button>
        <span> or <span {{action 'clearLocationForm' bubbles=false on='click'}} class='span_link'>Cancel</span></span>
      </div>
    </div>
  </div>
</div>

{{outlet}}

