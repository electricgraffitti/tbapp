<div class="component component_left">
  <div class="component_header">
    <div class="component_header_left">
      <label class="component_title">Service Records</label>
    </div>
    <div class="component_header_right">
      <ul class='toolbar'>
        <li>{{#link-to 'item_service_records.add_service_record' class='icon icon-16 add' title='Add Service Record'}}Add Service Record{{/link-to}}</li>
      </ul>
    </div>
  </div>
  <div class="component_scroller">
    {{#if controller}}
      <div class="component_scroller">
        {{#each service_record in controller}}
          {{#with service_record}}
            {{partial 'items/listed_service_record'}}
          {{/with}}
        {{/each}}
      </div>
    {{else}}
      {{emptyComponentMessage emptyLocationsMessage}}
    {{/if}}
  </div>
</div>
{{outlet}}

