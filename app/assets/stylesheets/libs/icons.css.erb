/* Icons */
.icon {background: url(<%= asset_path 'msm-sprite.png' %>) no-repeat; display:block; text-indent: -9999em;cursor: pointer;}
.small_icon {width: 100%; height: 100%; padding: 0px; float: left; border: none;}
.micro_icon {width: 100%; height: 100%; padding: 0px; float: left; border: none;}
.toolbar_icon { width: 35px; height: 24px;position: relative;float: left;margin:0px; padding: 0px; border: none;}
.widget_tool_bar .icon {text-indent: -9999em;width: 28px;height: 24px;border-left: 1px solid #BBB;border-right: 1px solid #EEE;}

.non_icon_header_link {color: #037BA6; cursor: pointer; position: relative;float: left;padding-left: 10px;}
.content_list_item .non_icon_header_link {float:right;}
.content_header .non_icon_header_link {float: none;}
.non_icon_header_link, .toolbar_text {font-size: 13px;}
.sidebar .arrow_right_icon {background-position: 500px 500px;}
.sidebar ul li a:hover .arrow_right_icon {right: 1px;background-position: -3px -277px;position: absolute;top: 9px;}

.badge {position: absolute;right: 2px;top: 1px;width: 11px;height: 11px;background: #eb0000;color: #FFF;padding: 3px 0px 3px 5px;font-size: 11px;border-radius: 8px;}
.large_badge {position: absolute; right: 0px;top: 0px;width: 13px;height: 17px;background: #eb0000;color: #FFF;border-radius: 12px;padding: 4px 6px;font-size: 14px;text-align: center;display: block}
.button .logout_icon {background-position: 0px 0px;}
.button:hover .logout_icon {background-position: 0px -30px;}

.assignment_progress_icon {background: #5AD5FF; border: 1px solid #5577C4; width: 8px;height: 8px;display: inline-block;border-radius: 5px;}
.assignment_progress_icon.complete {background: #FF0; border: 1px solid #DFDF00;} /* - Yellow - */
.assignment_progress_icon.finalized {background: #9DE07D; border: 1px solid #5EC455;} /* Green */
.assignment_progress_icon.non-complete-reviewed {background: #E90000; border: 1px solid #C45555;} /* - Dark Red - */
