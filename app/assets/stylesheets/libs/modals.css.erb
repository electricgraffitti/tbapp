#modal_wrap {position:absolute;top:10px;left:66px; box-sizing: border-box; padding:2px;background:rgba(0,0,0,0.4);z-index:9000;}
.ie8 #modal_wrap{background:transparent;filter:progid:DXImageTransform.Microsoft.gradient(startColorstr=#60000000,endColorstr=#60000000);zoom:1;}

#modal_wrap.notification{width:300px;}
#modal_wrap #modal_header{color:#fff;font-weight:bold;padding:10px;cursor:move;float: left;width: 100%;box-sizing: border-box;position: relative;height: 40px;}
#modal_wrap #modal_header .close_icon{float:right;}
#modal_content_wrap{background:none repeat scroll 0 0 #FFFFFF;padding:20px 10px;position:relative;float:left;min-width:350px;}
#modal_content {position:relative;float:left; background: rgb(239, 242, 245);padding: 0px; box-sizing: border-box;clear: both;}
#modal_content label{font-size:300;}
#confirm_message {padding-bottom: 10px;}
#modal_wrap input {width: 360px; margin-bottom: 10px;}

.notification #modal_content{padding-top:20px;width:272px;font-weight:700;}
#confirmation_links{position:relative;float:left;width:201px;margin-top:20px;}
#confirmation_links #complete_link,#confirmation_links span,#confirmation_links a{position:relative;float:left;}
#confirmation_links #complete_link{width:35px;padding-top:3px;height:18px;}
#confirmation_links span{display:block;padding:0px 10px;width:10px;}
#confirmation_links span,#confirmation_links a{padding-top:3px;}
#confirm_ok {width: 115px;float: left;}
#confirm_cancel {width: 115px;float: right;}

#expose_panel{position:absolute;top:0px;left:0px;height:0px;width:100%;height:100%;/* background:rgba(0,0,0,0.1);*/}

#modal_wrap.error_modal {background:rgba(184,0,0,0.4); min-width: 350px;}
#modal_wrap.error_modal #modal_content {background: #fff; color:#8D0D00; min-width: 350px;}
#modal_wrap.error_modal #modal_content p {padding: 7px 10px 7px;margin: 0px;}

#confirm_wrap {width: 376px;padding: 10px;position: relative;float: left;}
