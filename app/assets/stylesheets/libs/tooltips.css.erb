#tool_tip_wrap{position:absolute;background:#fff;background:rgba(255,255,255,0.95);border:3px solid #555D69;z-index:10000;-webkit-box-shadow:0px 0px 1px rgba(0,0,0,0.4);-moz-box-shadow:0px 0px 1px rgba(0,0,0,0.4);box-shadow:0px 0px 1px rgba(0,0,0,0.4);}
#tool_tip_wrap.info{width:280px;}
#tool_tip_wrap.info #tool_tip_content{width:260px; max-height: 300px; overflow-y: auto;}
#tool_tip_wrap.table_tip{min-width:280px;}
#tool_tip_wrap.table_tip #tool_tip_content{min-width:260px;}
#tool_tip_header{position:relative;float:left;padding:10px;background:#EEE;font-weight:700;}
#tool_tip_wrap.info #tool_tip_header{width:260px;}
#tool_tip_content{position: relative;float: left;padding: 5px;background: #6E7987;color: #fff;}
#tool_tip_content li { margin-bottom: 6px; }
#tool_tip_arrow{position:absolute;border-width:5px;border-style:solid;width:0px;height:0px;border-color:transparent;}
#tool_tip_wrap.bottom.left #tool_tip_arrow{border-top-color:#555D69;border-left-color:#555D69;left:-3px;bottom:-10px;}
#tool_tip_wrap.bottom.right #tool_tip_arrow{border-top-color:#555D69;border-right-color:#555D69;right:-3px;bottom:-10px;}
#tool_tip_wrap.top.left #tool_tip_arrow{border-bottom-color:#555D69;border-left-color:#555D69;left:-3px;top:-10px;}
#tool_tip_wrap.top.right #tool_tip_arrow{border-bottom-color:#555D69;border-right-color:#555D69;right:-3px;top:-10px;}
#tool_tip_header .icon{float:right;height:13px;}