.sidebar, .sidebar ul, .sidebar header, .sidebar li, .sidebar li a, .sidebar li ul li a span {position:relative; float:left;width: 100%;display: block; box-sizing: border-box;}
.sidebar header {padding: 10px;background: #6F7986; color:#fff; font-size:16px;}
.sidebar li ul li {border-top: 1px solid rgba(255,255,255,0.6);border-bottom: 1px solid rgba(0,0,0,0.1);}
.sidebar li ul li:hover {background: #F2F6FD;}
.sidebar li ul li a {padding: 10px 10px 5px 20px;}
.sidebar li ul li a, .sidebar li ul li a:active, .sidebar li ul li a:visited {color:#6F7986;text-decoration: none;}
.sidebar li ul li a span.icon {width: 20px; height: 20px; margin-right: 10px;}
.sidebar li ul li a span.nav_text {width: 168px;}