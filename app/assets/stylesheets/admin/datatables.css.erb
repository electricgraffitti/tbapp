table{width:100%;}
table tr th{padding:10px 5px;
	background: #98a5b3; /* Old browsers */
background: -moz-linear-gradient(top,  #98a5b3 0%, #555d69 100%); /* FF3.6+ */
background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#98a5b3), color-stop(100%,#555d69)); /* Chrome,Safari4+ */
background: -webkit-linear-gradient(top,  #98a5b3 0%,#555d69 100%); /* Chrome10+,Safari5.1+ */
background: -o-linear-gradient(top,  #98a5b3 0%,#555d69 100%); /* Opera 11.10+ */
background: -ms-linear-gradient(top,  #98a5b3 0%,#555d69 100%); /* IE10+ */
background: linear-gradient(to bottom,  #98a5b3 0%,#555d69 100%); /* W3C */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#98a5b3', endColorstr='#555d69',GradientType=0 ); /* IE6-9 */

color:#fff;border-top:1px solid #555D69;border-right:1px solid #555D69;border-bottom:1px solid rgba(0,0,0,0.5);border-left:1px solid rgba(0,0,0,0.2);}
table tr td{padding:5px 5px;border-top:1px solid #999;border-right:1px solid #AAA;border-bottom:1px solid #AAA;border-left:1px solid #AAA;}
table tr {background: #E6EAF0;}
table tr.odd {background: #fcfcfc;}
table tr td a, table tr td a:visited {color:#6F7986;}
table tr td.unavailable_code{color:#ff0000;font-weight:700;}
table tr td a.button{color:#fff;}
.pagination{padding:10px;background:#999;background:rgba(0,0,0,0.1);}
.pagination a,.pagination span{padding:2px 3px;}

.dataTables_info {padding: 10px 0px;}
.dataTables_length {position: relative; float: right;margin-right: 10px;}
.fg-toolbar {padding-bottom: 10px;}