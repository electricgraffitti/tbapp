<div id='signup_panel' class='panel'>
  <header class='public_header'>Tracking Book Sign Up</header>
  <section class='panel-body'>
		<%= simple_form_for(resource, 
			as: resource_name, 
			url: registration_path(resource_name), 
			html: {:class => 'form-vertical' }) do |f| %>
		  <%= f.error_notification %>
		  <%= display_base_errors resource %>
		  <div class="form-group"><%= f.input :name, :autofocus => true, input_html: { class: 'form-control' } %></div>
		  <div class="form-group"><%= f.input :email, :required => true, input_html: { class: 'form-control' } %></div>
		  <div class="form-group"><%= f.input :password, :required => true, input_html: { class: 'form-control' } %></div>
		  <div class="form-group"><%= f.input :password_confirmation, :required => true, input_html: { class: 'form-control' } %></div>
		  <div class="form-group actions"><%= f.button :submit, 'Sign up', class: 'btn btn-default btn-wide' %></div>
		<% end %>
	</section>
	<footer><%= render "devise/shared/links" %></footer>
</div>
